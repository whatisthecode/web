@{
    if(Request.Url.AbsoluteUri.IndexOf("login") > 0 || Request.Url.AbsoluteUri.IndexOf("notfound") > 0 || Request.Url.AbsoluteUri.IndexOf("forbidden") > 0)
    {
        Layout = "~/Views/Layouts/_Layout_Blank.cshtml";
    }
    else
    {
        Layout = "~/Views/Layouts/_Layout_Admin.cshtml";
    }
}
